{
    "name": "cmatosbc/desired-patterns",
    "description": "A collection of modern PHP design patterns implemented using PHP 8.2+ features",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "DesiredPatterns\\": "src/",
            "Examples\\": "examples/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DesiredPatterns\\Tests\\": "tests/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "authors": [
        {
            "name": "Carlos Matos",
            "email": "carlos@cmatosbc.com"
        }
    ]
}
