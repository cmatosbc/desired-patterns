{
    "name": "cmatosbc/design-patterns",
    "description": "Modern PHP Design Patterns Implementation",
    "type": "library",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "DesiredPatterns\\": "src/",
            "Examples\\": "examples/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "authors": [
        {
            "name": "Carlos",
            "email": "carlosarturmatos1977@gmail.com"
        }
    ]
}
